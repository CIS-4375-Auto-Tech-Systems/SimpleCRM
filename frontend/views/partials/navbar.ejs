    function displayTime() {
        var date = new Date();
        var hours = date.getHours();
        var minutes = date.getMinutes();
        var meridiem = "AM";
        if (hours > 12) {
          hours = hours - 12;
          meridiem = "PM";
        }
        if (hours == 0) {
          hours = 12;
        }
        if (minutes < 10) {
          minutes = "0" + minutes;
        }
        var time = hours + ":" + minutes + " " + meridiem;
        document.getElementById("clock").innerHTML = time;
      }
