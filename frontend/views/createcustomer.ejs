<!DOCTYPE html>
<html>
  <head>
    <%- include('partials/head.ejs'); %>
    <meta charset="UTF-8">
    <title>Create Customer Form</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
  </head>
  <body>
    
    <div class="container">
        <%- include('partials/leftcolumn.ejs'); %>
      <div class="right-column">
        <%- include('partials/header.ejs'); %>
        <div class="bottomrow">this is create customer, so it needs to have a form to connect to the backend</div>
        
      <h1>Create Customer Form</h1>
      <form>
          <div class="form-group">
              <label for="name">Name:</label>
              <input type="text" class="form-control" id="name" placeholder="Enter name">
          </div>
          <div class="form-group">
              <label for="email">Email:</label>
              <input type="email" class="form-control" id="email" placeholder="Enter email">
          </div>
          <div class="form-group">
              <label for="phone">Phone:</label>
              <input type="tel" class="form-control" id="phone" placeholder="Enter phone number">
          </div>
          <div class="form-group">
              <label for="address">Address:</label>
              <textarea class="form-control" id="address" rows="3" placeholder="Enter address"></textarea>
          </div>
          <button type="submit" class="btn btn-primary">Submit</button>
      </form>


  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
        <footer>
          <%- include('partials/footer.ejs'); %>
        </footer>
      </div>
    </div>        
  </body>
</html>
