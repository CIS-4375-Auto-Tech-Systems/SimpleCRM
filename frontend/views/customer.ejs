<!DOCTYPE html>
<html>
  <head>
    <title>Customer Page</title>
    <%- include('partials/head.ejs'); %>
    <script src="lookup.js"></script>
  </head>
  <body>
    <div class="container">
      <%- include('partials/leftcolumn.ejs'); %>
      <div class="right-column">
        <%- include('partials/header.ejs'); %>
        <div class="content">
          <div class="customer-info">
            <div class="profile-photo">
              <img src="/images/profile-placeholder.png" alt="Profile Photo" width="200" height="180">
            </div>
            <div class="customer-details">
              <h1>Stephane Lutz</h1>
              <p>Address: 123 deserted ln</p>
              <p>Phone: (281) 555 - 5555</p>
              <p>Email: jnae@gmail.com</p>
            </div>
          </div>
          <div class="vehicle-info">
            <h2>Vehicles</h2>
            <table>
              <thead>
                <tr>
                  <th>Make</th>
                  <th>Model</th>
                  <th>Year</th>
                  <th>plate</th>
                </tr>
              </thead>
              <tbody>
                <tr>
                  <td>Hyundai</td>
                  <td>Elantra</td>
                  <td>2017</td>
                  <td>TYY4586</td>
                </tr>
                <tr>
                  <td>Honda</td>
                  <td>Accord</td>
                  <td>2008</td>
                  <td>DEF456</td>
                </tr>
              </tbody>
            </table>
          </div>
          <div class="service-history">
            <h2>Service History</h2>
            <table>
              <thead>
                <tr>
                  <th>Service</th>
                  <th>Date In</th>
                  <th>Date Out</th>
                  <th>Total Amount</th>
                  <th>Action</th>
                </tr>
              </thead>
              <tbody>
                <tr>
                  <td>Oil Change</td>
                  <td>03/01/2023</td>
                  <td>03/01/2023</td>
                  <td>$29.99</td>
                  <td>
                    <button class="edit-service-button" data-service-id="<%= service.id %>">Edit</button>
                    <button class="delete-service-button">Delete</button>
                  </td>
                </tr>
                <tr>
                  <td>Brake Service</td>
                  <td>02/01/2023</td>
                  <td>02/01/2023</td>
                  <td>$299.99</td>
                  <td>
                    <button class="edit-service-button" data-service-id="<%= service.id %>">Edit</button>
                    <button class="delete-service-button">Delete</button>
                  </td>
                </tr>
              </tbody>
            </table>
          </div>
        </div>
        <footer>
          <%- include('partials/footer.ejs'); %>
        </footer>
      </div>
    </div>
  </body>
</html>
